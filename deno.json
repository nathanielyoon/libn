{
  "license": "0BSD",
  "workspace": [
    "./aead",
    "./base",
    "./csv",
    "./ecc",
    "./fp",
    "./hash",
    "./query",
    "./text"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "fast-check": "npm:fast-check@^4.3.0"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "include": [
        "camelcase",
        "eqeqeq",
        "no-console",
        "no-external-import",
        "no-inferrable-types",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ],
      "tags": ["recommended", "jsr"]
    },
    "plugins": ["./lib/lint.ts"]
  },
  "permissions": {
    "write-vectors": {
      "net": [
        "www.rfc-editor.org",
        "raw.githubusercontent.com",
        "en.wikipedia.org",
        "earthquake.usgs.gov",
        "www.unicode.org",
        "crockford.com",
        "www.ietf.org"
      ],
      "write": true,
      "read": true,
      "run": ["g++"]
    }
  },
  "tasks": {
    "cwd": "cd \"$INIT_CWD\" || exit 1;",
    "bundle": {
      "dependencies": ["cwd"],
      "description": "Bundles files (with flags and file names passed to `deno task`).",
      "command": "deno run --allow-env --allow-run npm:esbuild --bundle --format=esm --external:@libn"
    },
    "write": {
      "description": "Runs a test-vector-writing script.",
      "dependencies": ["cwd"],
      "command": "echo \"{}\" >./vectors.json && deno run --permission-set=write-vectors --unstable-raw-imports ./test.ts;"
    },
    "vectors": {
      "description": "Runs all test-vector-writing scripts.",
      "command": "deno task --cwd=./aead write; deno task --cwd=./base write; deno task --cwd=./csv write; deno task --cwd=./ecc write; deno task --cwd=./hash write; deno task --cwd=./text write;"
    },
    "check": "deno check --doc",
    "lint": "deno lint --compact && deno doc --lint **/*.ts",
    "test": "deno test -P --unstable-raw-imports --doc --no-check --parallel --trace-leaks",
    "record": "deno task --cwd=. test --reporter=dot --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only",
    "report": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$(pwd)\"",
    "cover": "deno task --cwd=. record && deno task --cwd=. report",
    "pure": {
      "description": "Checks whether the current directory's modules have side-effects, which would be included in the generated output. Requires a shell and jq.",
      "dependencies": ["cwd"],
      "command": "sh -c 'for path in $(jq -r \"if (.exports | type) == \\\"object\\\" then .exports[] else .exports end\" deno.json); do echo \"import \\\"${path}\\\";\" >bundle.ts && deno task --cwd=. bundle bundle.ts; rm -f bundle.ts; done'"
    },
    "all": {
      "description": "Runs all check tasks.",
      "dependencies": ["cwd"],
      "command": "deno task --cwd=. check; deno task --cwd=. lint; deno task --cwd=. cover; deno task --cwd=. pure; deno publish --dry-run --allow-dirty"
    },
    "npm": {
      "description": "Prepares an NPM-compatible subdirectory.",
      "dependencies": ["cwd"],
      "command": "deno eval 'import{build,emptyDir}from\"@deno/dnt\";await emptyDir(\"npm\");const{name,version,exports}=JSON.parse(await Deno.readTextFile(\"deno.json\"));await build({outDir:\"npm\",entryPoints:typeof exports===\"string\"?[exports]:Object.entries(exports).map(([name,path])=>({name,path})),package:{name,version,license:\"0BSD\",repository:{type:\"git\",url:\"git+https://github.com/nathanielyoon/libn.git\"},shims:{},skipNpmInstall:true,test:false,postBuild:async()=>{await Deno.copyFile(\"README.md\",\"npm/README.md\");await Deno.copyFile(\"../LICENSE\",\"npm/LICENSE\")}}})'"
    },
    "publish": {
      "description": "Publishes to JSR and NPM.",
      "dependencies": ["cwd"],
      "command": "deno publish --allow-dirty; cd npm && npm publish --access=public && cd .. && rm -r npm;"
    }
  }
}
