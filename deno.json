{
  "license": "0BSD",
  "workspace": [
    "./aead",
    "./base",
    "./csv",
    "./ecc",
    "./element",
    "./fuzzy",
    "./hash",
    "./json",
    "./nchf",
    "./paseto",
    "./query",
    "./result",
    "./signal",
    "./utf",
    "./words"
  ],
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "fast-check": "npm:fast-check@^4.3.0"
  },
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr", "workspace"],
      "include": [
        "camelcase",
        "eqeqeq",
        "no-console",
        "no-eval",
        "no-external-import",
        "no-self-compare",
        "no-sparse-arrays",
        "no-throw-literal",
        "no-useless-rename",
        "prefer-ascii",
        "triple-slash-reference"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ]
    },
    "plugins": ["./lint.ts"]
  },
  "permissions": {
    "vectors": {
      "net": [
        "www.rfc-editor.org",
        "raw.githubusercontent.com",
        "en.wikipedia.org",
        "earthquake.usgs.gov",
        "www.unicode.org",
        "crockford.com",
        "www.ietf.org"
      ],
      "write": true,
      "read": true,
      "run": ["g++"]
    }
  },
  "tasks": {
    "write": "deno run --permission-set=vectors --unstable-raw-imports \"$INIT_CWD/vectors.ts\";",
    "check": "deno check --doc",
    "lint": "deno lint --compact && deno doc --lint **/*.ts",
    "test": "deno test --permission-set --quiet --unstable-raw-imports --doc --no-check --parallel --trace-leaks",
    "record": "deno task --quiet --cwd=. test --reporter=dot --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only",
    "report": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$(pwd)\"",
    "cover": "deno task --quiet --cwd=. record && deno task --quiet --cwd=. report",
    "ok": "deno task --cwd=. check; deno task --cwd=. lint; deno task --cwd=. cover; deno publish --dry-run --allow-dirty",
    "exports": "cd \"$INIT_CWD\" || exit 1; bash -c 'jq -r \"if (.exports | type) == \\\"object\\\" then .exports | to_entries[] | \\\"\\(.key) \\(.value)\\\" else \\\". \\(.exports)\\\" end\" ./deno.json | while read line; do echo \"# $(cut -d\" \" -f1 <<<\"$line\") ($(deno bundle --quiet --unstable-raw-imports --minify $(cut -d\" \" -f2 <<<\"$line\") | brotli | wc --bytes))\"; echo \"import \\\"$(cut -d\" \" -f2 <<<\"$line\")\\\";\" >bundle.ts && deno bundle --quiet --unstable-raw-imports bundle.ts; rm -f bundle.ts; echo; done'",
    "npm": "cd \"$INIT_CWD\" || exit 1; deno run --allow-env --allow-run=npm,bun --allow-read --allow-write ../npm.ts",
    "publish": "cd \"$INIT_CWD\" || exit 1; deno publish --allow-dirty; cd npm && npm publish --access=public && cd .. && rm -r npm;"
  }
}
