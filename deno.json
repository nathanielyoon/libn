{
  "license": "GPL-3.0-or-later",
  "workspace": [
    "./aead",
    "./base",
    "./csv",
    "./ecc",
    "./fp",
    "./hash",
    "./query",
    "./text"
  ],
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "fast-check": "npm:fast-check@^4.3.0"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "include": [
        "camelcase",
        "eqeqeq",
        "no-console",
        "no-external-import",
        "no-inferrable-types",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ],
      "tags": ["recommended", "jsr"]
    }
  },
  "permissions": {
    "esbuild": {
      "env": true,
      "run": true
    },
    "write-vectors": {
      "net": [
        "www.rfc-editor.org",
        "raw.githubusercontent.com",
        "en.wikipedia.org",
        "earthquake.usgs.gov",
        "www.unicode.org",
        "crockford.com",
        "www.ietf.org"
      ],
      "write": true,
      "read": true,
      "run": ["g++"]
    }
  },
  "tasks": {
    "cwd": {
      "description": "Changes to the task's initial directory.",
      "command": "cd \"$INIT_CWD\" || exit 1;"
    },
    "bundle": {
      "dependencies": ["cwd"],
      "description": "Bundles files (with flags and file names passed to `deno task`).",
      "command": "deno run --permission-set=esbuild npm:esbuild --bundle --format=esm --external:@libn"
    },
    "write": {
      "dependencies": ["cwd"],
      "description": "Runs a test-vector-writing script.",
      "command": "echo \"{}\" >./vectors.json && deno run --permission-set=write-vectors --unstable-raw-imports ./test.ts"
    },
    "vectors": {
      "description": "Runs all test-vector-writing scripts.",
      "command": "deno task --cwd=./aead write; deno task --cwd=./base write; deno task --cwd=./csv write; deno task --cwd=./ecc write; deno task --cwd=./hash write; deno task --cwd=./text write;"
    },
    "check": {
      "description": "Type-checks files.",
      "command": "deno check --doc"
    },
    "lint": {
      "description": "Lints code and documentation.",
      "command": "deno lint --compact && deno doc --lint **/*.ts"
    },
    "test": {
      "description": "Runs tests.",
      "command": "deno test -P --unstable-raw-imports --doc --no-check --parallel --trace-leaks"
    },
    "record": {
      "description": "Collects coverage data.",
      "command": "deno task --cwd=. test --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only"
    },
    "report": {
      "description": "Displays coverage data.",
      "command": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$(pwd)\""
    },
    "cover": {
      "description": "Collects and displays coverage data.",
      "command": "deno task --cwd=. record && deno task --cwd=. report"
    },
    "pure": {
      "dependencies": ["cwd"],
      "description": "Checks whether the current directory's modules have side-effects, which would be included in the generated output.",
      "command": "sh -c 'for path in $(jq -r \"if (.exports | type) == \\\"object\\\" then .exports[] else .exports end\" deno.json); do echo \"import \\\"${path}\\\";\" >bundle.ts && deno task --cwd=. bundle bundle.ts; rm -f bundle.ts; done'"
    },
    "all": {
      "description": "Runs all check tasks.",
      "dependencies": ["cwd"],
      "command": "deno task --cwd=. check; deno task --cwd=. lint; deno task --cwd=. cover; deno task --cwd=. pure; deno publish --dry-run --allow-dirty"
    },
    "npm": {
      "dependencies": ["cwd"],
      "description": "Prepares an NPM-compatible subdirectory.",
      "command": "deno eval 'import{build,emptyDir}from\"@deno/dnt\";const{name,version,exports}=JSON.parse(await Deno.readTextFile(\"./deno.json\"));await Deno.mkdir(\"./npm\",{recursive:true});await emptyDir(\"./npm\");await build({entryPoints:typeof exports===\"string\"?[exports]:Object.entries(exports).map(([name,path])=>({name,path})),outDir:\"./npm\",package:{name,version,license:\"GPL-3.0-or-later\",repository:{type:\"git\",url:\"git+https://github.com/nathanielyoon/libn.git\"}},shims:{},typeCheck:false,test:false,scriptModule:false,skipNpmInstall:true})'"
    },
    "publish": {
      "dependencies": ["cwd"],
      "description": "Publishes to JSR and NPM.",
      "command": "deno publish --allow-dirty; cd npm && npm publish --access=public && cd .. && rm -r npm;"
    }
  }
}
