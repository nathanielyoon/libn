{
  "license": "0BSD",
  "workspace": [
    "./result"
  ],
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr", "workspace"],
      "include": [
        "camelcase",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any"
      ]
    }
  },
  "minimumDependencyAge": 10080,
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "fast-check": "npm:fast-check@^4.5.3"
  },
  "permissions": {
    "npm": {
      "net": ["jsr.io"],
      "env": true,
      "read": true,
      "write": true,
      "run": ["npm", "bun"]
    },
    "test": {
      "read": true,
      "write": true
    }
  },
  "tasks": {
    "cwd": "cd \"$INIT_CWD\" || exit 1;",
    "check": "deno check --doc",
    "lint": "deno lint --compact",
    "doc": "deno doc --lint **/*.ts",
    "test": "deno test --permission-set --quiet --unstable-raw-imports --doc --no-check --parallel --trace-leaks",
    "record": "deno task --quiet --cwd=. test --reporter=dot --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only",
    "report": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$INIT_CWD\"",
    "cover": "deno task --quiet --cwd=. record && deno task --quiet --cwd=. report",
    "ok": { "dependencies": ["check", "lint", "doc", "cover"] },
    "npm": {
      "dependencies": ["cwd"],
      "command": "deno run --permission-set ../npm.ts"
    },
    "publish": {
      "dependencies": ["cwd"],
      "command": "deno publish --allow-dirty; cd npm && npm publish --access=public && cd .. && rm -r npm;"
    }
  }
}
