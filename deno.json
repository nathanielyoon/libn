{
  "license": "0BSD",
  "workspace": [
    "./result",
    "./utf",
    "./base"
  ],
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr", "workspace"],
      "include": [
        "camelcase",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any"
      ]
    }
  },
  "minimumDependencyAge": 10080,
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "fast-check": "npm:fast-check@^4.5.3"
  },
  "permissions": {
    "vectors": {
      "net": true,
      "write": true
    },
    "test": {
      "read": true,
      "write": true
    },
    "npm": {
      "net": ["jsr.io"],
      "env": true,
      "read": true,
      "write": true,
      "run": ["npm", "bun"]
    }
  },
  "tasks": {
    "cwd": "cd \"$INIT_CWD\" || exit 1;",
    "vectors": {
      "dependencies": ["cwd"],
      "command": "deno run --permission-set=vectors --quiet"
    },
    "check": {
      "dependencies": ["cwd"],
      "command": "deno check --doc"
    },
    "lint": {
      "dependencies": ["cwd"],
      "command": "deno lint --compact"
    },
    "doc": {
      "dependencies": ["cwd"],
      "command": "deno doc --lint **/*.ts"
    },
    "test": {
      "dependencies": ["cwd"],
      "command": "deno test --permission-set=test --quiet --doc --no-check --parallel"
    },
    "record": {
      "dependencies": ["cwd"],
      "command": "deno task --quiet --cwd=. test --reporter=dot --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only"
    },
    "report": {
      "dependencies": ["cwd"],
      "command": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$INIT_CWD\""
    },
    "cover": {
      "dependencies": ["cwd"],
      "command": "deno task --quiet --cwd=. record && deno task --quiet --cwd=. report"
    },
    "ok": {
      "dependencies": ["check", "lint", "doc", "cover"]
    },
    "npm": {
      "dependencies": ["cwd"],
      "command": "deno run --permission-set=npm --quiet ../npm.ts"
    },
    "publish": {
      "dependencies": ["cwd"],
      "command": "deno publish --allow-dirty; cd npm && npm publish --access=public && cd .. && rm -r npm;"
    }
  }
}
