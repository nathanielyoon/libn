{
  "license": "0BSD",
  "workspace": [
    "./result",
    "./utf",
    "./words",
    "./base",
    "./csv"
  ],
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr", "workspace"],
      "include": [
        "camelcase",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any"
      ]
    }
  },
  "minimumDependencyAge": 10080,
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "fast-check": "npm:fast-check@^4.5.3"
  },
  "tasks": {
    "check": "deno check --doc",
    "lint": "deno lint",
    "doc": "deno doc --lint **/*.ts",
    "test": "deno test --doc",
    "record": "deno task --quiet --cwd=. test --reporter=dot --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only",
    "report": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$INIT_CWD\"",
    "cover": "deno task --quiet --cwd=. record && deno task --quiet --cwd=. report",
    "ok": { "dependencies": ["check", "lint", "doc", "cover"] },
    "npm": "deno eval 'import{build,emptyDir}from\"@deno/dnt\";import root from \"./deno.json\"with{type:\"json\"};const [config]=await Promise.all([Deno.readTextFile(\"./deno.json\"),emptyDir(\"./npm\")]);const{name,version,exports,compilerOptions={}}=JSON.parse(config),directory=name.slice(name.indexOf(\"/\")+1);await Promise.all([build({outDir:\"./npm\",entryPoints:typeof exports===\"string\"?[exports]:Object.entries(exports).map($=>({name:$[0],path:$[1]})),shims:{},typeCheck:\"both\",compilerOptions:{...root.compilerOptions,...compilerOptions,lib:[...compilerOptions.lib?.filter(RegExp.prototype.test.bind(/^(?!deno|es(?:next|\\d+))/i))??[],\"ESNext\"]},filterDiagnostic:($)=>!/\\/jsr\\.io|test\\.ts$/.test($.file?.fileName??\"\"),test:false,package:{name,version,license:root.license,homepage:\"https://jsr.io/\"+name,repository:{type:\"git\",url:\"git+https://github.com/nathanielyoon/libn.git\",directory}}}),Deno.copyFile(new URL(import.meta.resolve(\"./LICENSE\")),\"./npm/LICENSE\"),Deno.copyFile(\"./README.md\",\"./npm/README.md\")])'",
    "publish": "deno publish --allow-dirty; cd npm && npm publish --access=public && cd .. && rm -r npm;"
  }
}
