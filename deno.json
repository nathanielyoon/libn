{
  "license": "GPL-3.0-or-later",
  "workspace": [
    "./aead",
    "./base",
    "./csv",
    "./ecc",
    "./fp",
    "./hash",
    "./json",
    "./query",
    "./signal",
    "./text"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "fast-check": "npm:fast-check@^4.3.0"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true
  },
  "permissions": {
    "esbuild": {
      "env": true,
      "run": true
    },
    "write-vectors": {
      "net": [
        "www.rfc-editor.org",
        "raw.githubusercontent.com",
        "en.wikipedia.org",
        "earthquake.usgs.gov",
        "www.unicode.org",
        "crockford.com",
        "www.ietf.org"
      ],
      "write": true
    }
  },
  "lint": {
    "rules": {
      "include": [
        "camelcase",
        "eqeqeq",
        "no-console",
        "no-external-import",
        "no-inferrable-types",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ],
      "tags": ["recommended", "jsr"]
    }
  },
  "tasks": {
    "bundle": {
      "description": "Bundle files (with flags and file names passed to `deno task`).",
      "command": "deno run --permission-set=esbuild npm:esbuild --bundle --format=esm --external:@libn"
    },
    "write": {
      "description": "Runs a test-vector-writing script.",
      "command": "echo \"{}\" >./vectors.json && deno run --permission-set=write-vectors --unstable-raw-imports ./test.ts"
    },
    "vectors": {
      "description": "Runs all test-vector-writing scripts.",
      "command": "deno task --cwd=./aead write; deno task --cwd=./base write; deno task --cwd=./csv write; deno task --cwd=./ecc write; deno task --cwd=./hash write; deno task --cwd=./text write;"
    },
    "check": {
      "description": "Type-check files.",
      "command": "deno check --doc"
    },
    "lint": {
      "description": "Lint code and documentation.",
      "command": "deno lint --compact && deno doc --lint **/*.ts"
    },
    "test": {
      "description": "Run tests.",
      "command": "deno test -P --unstable-raw-imports --doc --no-check --parallel --trace-leaks"
    },
    "record": {
      "description": "Collect coverage data.",
      "command": "deno task --cwd=. test --clean --coverage=/tmp/deno-coverage --coverage-raw-data-only"
    },
    "report": {
      "description": "Display coverage data.",
      "command": "deno coverage --detailed /tmp/deno-coverage --include=\"^file://$(pwd)\""
    },
    "cover": {
      "description": "Collect and display coverage data.",
      "command": "deno task --cwd=. record && deno task --cwd=. report"
    },
    "pure": {
      "description": "Checks whether the current directory's module has side-effects, which would be included in the generated output.",
      "command": "echo \"import \\\"./mod.ts\\\";\" >bundle.ts && deno task --cwd=. bundle ./bundle.ts; rm -f ./bundle.ts;"
    },
    "all": {
      "description": "Run all check tasks.",
      "dependencies": ["check", "lint"],
      "command": "cd \"$INIT_CWD\" && (deno task --cwd=. cover; deno task --cwd=. pure; deno publish --dry-run --allow-dirty)"
    }
  }
}
