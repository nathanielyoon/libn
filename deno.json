{
  "license": "GPL-3.0-or-later",
  "workspace": [
    "./25519",
    "./aead",
    "./base",
    "./csv",
    "./dom",
    "./fuzz",
    "./hash",
    "./json",
    "./lib",
    "./paseto",
    "./result",
    "./signal",
    "./url",
    "./vite",
    "./weight"
  ],
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "fast-check": "npm:fast-check@^4.3.0"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true
  },
  "lint": {
    "rules": {
      "include": [
        "explicit-module-boundary-types",
        "no-inferrable-types",
        "no-self-compare",
        "no-sparse-arrays",
        "no-useless-rename",
        "prefer-ascii",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "ban-types",
        "no-cond-assign",
        "no-control-regex",
        "no-explicit-any",
        "no-invalid-regexp"
      ]
    }
  },
  "tasks": {
    "write": "deno run --allow-net --allow-write ./write.ts",
    "check": "deno check --doc --unstable-bundle",
    "lint": "deno lint --permit-no-files --compact && deno doc --lint **/*.ts",
    "test": "deno test --permit-no-files --allow-env --allow-read --allow-write --allow-ffi --unstable-bundle --no-check --doc --parallel",
    "coverage": "deno test --allow-env --allow-read --allow-write --allow-ffi --unstable-bundle --no-check --reporter=dot --coverage --coverage-raw-data-only --clean && deno coverage --detailed --include=\"^file://$(pwd)\"; rm -r coverage",
    "all": "deno task --cwd=. check && deno task --cwd=. lint && deno task --cwd=. coverage && deno publish --dry-run --allow-dirty",
    "npm": "deno eval 'import{build,emptyDir}from\"@deno/dnt\";const{name,version}=JSON.parse(await Deno.readTextFile(\"./deno.json\"));await Deno.mkdir(\"./npm\",{recursive:true});await emptyDir(\"./npm\");await build({entryPoints:[\"./mod.ts\"],outDir:\"./npm\",package:{name,version,license:\"GPL-3.0-or-later\",repository:{type:\"git\",url:\"git+https://github.com/nathanielyoon/libn.git\",},},shims:{},typeCheck:false,test:false,scriptModule:false,skipNpmInstall:true})'"
  }
}
